<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ComboBox="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:custom="clr-namespace:RestaurantOrder.CustomControls"
             x:Class="RestaurantOrder.Views.LoginPage" Style="{StaticResource NewOrderPageStyle}" >
             <!--x:Class="RestaurantOrder.Views.LoginPage" Style="{StaticResource GradientPageStyle}">-->

    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="14*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="9.7*"></RowDefinition>
            <RowDefinition Height="6.3*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="15*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="94*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Text="Restaurant Order Take" TextColor="#9096d4" Grid.Row="1" Grid.Column="1" VerticalTextAlignment="Center" VerticalOptions="Center" HorizontalOptions="Center"  Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1"  />

        <Image Source="fav_logo.jpg" Grid.Row="2" Grid.Column="1" WidthRequest="60" HeightRequest="50"	HorizontalOptions="Fill" VerticalOptions="Fill"			
         Aspect="AspectFit" SemanticProperties.Description="fav icon on login" SemanticProperties.Hint="fav"   />

        <Grid Grid.Row="4" Grid.Column="1"   >
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*"></ColumnDefinition>
                <ColumnDefinition Width="30*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Grid.Row="0"  Source="textbox_bg.png"  Aspect="AspectFill" VerticalOptions="Fill"></Image>
            <Border x:Name="BorderEntryIpPort" StrokeThickness="0"  Padding="0" Grid.Column="0" Grid.Row="0" HorizontalOptions="Fill" VerticalOptions="Fill" StrokeShape="RoundRectangle 5,5,5,5" InputTransparent="True">
                <custom:BorderlessEntry x:Name="EntryIpPort" HorizontalOptions="Fill" VerticalOptions="Fill" Placeholder="ip Port ex: 0.0.0.0:123" 
                                        TextColor="White" PlaceholderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" FontSize="15" BackgroundImageSource="textbox_bg.png" />
            </Border>

            <Button x:Name="BtnSaveipport"  TextColor="#f2edf5" Grid.Column="1" Grid.Row="0" Margin="10,0,0,0" CornerRadius="5" Text="Edit"   Clicked="BtnSaveipport_Clicked"  HorizontalOptions="Fill" VerticalOptions="Fill" />
        </Grid>

        <Image Grid.Row="6" Grid.Column="1" Source="textbox_bg.png"  Aspect="AspectFill" VerticalOptions="Fill"></Image>
        <Border   Background="Transparent" StrokeThickness="0"  Padding="0" Grid.Row="6" Grid.Column="1" HorizontalOptions="Fill" VerticalOptions="Center" StrokeShape="RoundRectangle 5,5,5,5">
            <ComboBox:SfComboBox   Style="{StaticResource ComboBoxStyle}" x:Name="comboBox" Padding="15,0,0,0" Margin="0"
                                   Placeholder="Select User" ItemsSource="{Binding UsersList}" SelectedItem="{Binding SelectedUser}"  TextMemberPath="Username" DisplayMemberPath="Username" />
        </Border>
        <!--<Border  StrokeThickness="2"  Padding="0" Grid.Column="1" Grid.Row="8" Margin="0"  HorizontalOptions="Fill" VerticalOptions="Fill" StrokeShape="RoundRectangle 5,5,5,5" >-->
        <Grid  RowSpacing="0" ColumnSpacing="0" Grid.Column="1" Grid.Row="8" Margin="0"  Background="Transparent" BackgroundColor="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100*"></RowDefinition>
                </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*" ></ColumnDefinition>
                <ColumnDefinition Width="20*"  ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  Source="textbox_bg.png" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill"></Image>

            <custom:BorderlessEntry  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="EntryPassword"  TextColor="White" PlaceholderColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" FontSize="15" Placeholder="Password" Text="{Binding Password}"  BackgroundImageSource="textbox_bg.png"
                                         SemanticProperties.Hint="password" IsPassword="{Binding IsPasswordHidden}" ></custom:BorderlessEntry>

                <ImageButton Grid.Column="1" Grid.Row="0" Source="{Binding IconEye}" Command="{Binding TogglePasswordCommand}" WidthRequest="15" HeightRequest="5" Margin="0,0,2,0"	HorizontalOptions="End" VerticalOptions="Center"	
                       Aspect="AspectFit" SemanticProperties.Description="seeicon icon on login" SemanticProperties.Hint="seen" BackgroundColor="Transparent"/>
            </Grid>
        <!--</Border>-->


        <Button x:Name="CounterBtn"  Text="Log in" CornerRadius="5" Grid.Column="1" Grid.Row="10"
                SemanticProperties.Hint="Counts the number of times you click" 
                Clicked="OnCounterClicked"  HorizontalOptions="Fill" VerticalOptions="Fill" />

        <ActivityIndicator IsRunning="{Binding Isbussy}" IsVisible="{Binding IsVisibleIndecator}" VerticalOptions="Center" HorizontalOptions="Center" 
               Grid.Column="1" Grid.Row="1" Grid.RowSpan="11" Color="#8c24d1"  />
    </Grid>
  
</ContentPage>
